<%= simple_form_for(@comentario) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :comentario %>
    <%= f.input :calificacion %>
	<%= f.association :cliente, :label_method => lambda { |r| "#{r.nombre}  #{r.apellido}" } %>  
    
    <%= f.input :visible %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
