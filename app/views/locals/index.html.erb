<h1>Listado de locales</h1>

<table>
  <tr>
	<th>Propietario</th>
    <th>Ciudad</th>
    <th>Descripcion</th>
    <th>Direccion</th>
    <th>Direccion google maps</th>
    <th>Telefono</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locals.each do |local| %>
  <tr>
	<td><%= local.cliente.nombre %> <%= local.cliente.apellido %></td>
    <td><%= local.ciudad.descripcion %></td>
    <td><%= local.descripcion %></td>
    <td><%= local.direccion %></td>
    <td><%= local.direccion_google_maps %></td>
    <td><%= local.telefono %></td>
    
    <td><%= link_to 'Show', local %></td>
    <td><%= link_to 'Edit', edit_local_path(local) %></td>
    <td><%= link_to 'Destroy', local, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

